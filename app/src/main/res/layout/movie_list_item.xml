<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="movie"
            type="com.santosh.popularmovies.model.Movie" />
        <variable
            name="listener"
            type="com.santosh.popularmovies.ui.fragments.movieList.OnMovieSelectedListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/movie_poster_image"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:imageUrl="@{movie.poster_path}"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:onClick="@{(view)-> listener.onMovieSelected(view, movie)}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>